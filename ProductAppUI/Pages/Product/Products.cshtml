@page
@using ProductAppUI.Pages.Product
@model ProductsModel

<h1>Ürün Listesi</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.ProductName</td>
                <td>@product.Price</td>
                <td>
                    <a href="#" class="btn btn-primary">Güncelle</a>
                    <a href="#" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>