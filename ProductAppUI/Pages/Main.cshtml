@page "{role?}"
@using ProductAppUI.MainModel
@model UsersModel
@{
    ViewData["Title"] = "User List";
}

<h2>Kullanıcı listesi </h2>

@* <p>Your token: @Model.Token</p> *@

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p style="color:red">@Model.ErrorMessage</p>
}
else if (Model.Users.Count > 0)
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Kullanıcı Adı</th>
                <th scope="col">Rol</th>
                <th scope="col">Güncelleme Tarihi</th>
                <th scope="col">Silindi mi?</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Username</td>
                    <td>@user.Role</td>
                    <td>@user.UpdatedDate.ToShortDateString()</td>
                    <td>@user.IsDeleted</td>
                    <td>
                        <a href="#" class="btn btn-primary btn-sm">Güncelle</a>
                        <a href="#" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No users found.</p>
}
