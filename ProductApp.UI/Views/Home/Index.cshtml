@using ProductApp.DataAccess.Products
@using ProductApp.Services
@using ProductApp.Services.Products

@model List<Product>

@{
	ViewData["Title"] = "Home Page";
}



<div class="container mt-4">
	<div class="row">
		<div class="col-8">
			<h2>Ürün Listesi</h2>
		</div>
		<div class="col-4">
			<a class="btn btn-outline-primary" asp-action="Create" asp-area="" asp-controller="Home">Yeni Ürün Ekle</a>
		</div>

		
	</div>

	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Code</th>
				<th>Price</th>
				<th>CreatedDate</th>
				<th>UpdatedDate</th>
				<th>DeletedDate</th>
				<th>IsDeleted</th>
				<th>ImageUrl</th>
				<th>İşlemler</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var product in Model)
			{
				<tr>
					<td>@product.Id</td>
					<td>@product.ProductName</td>
					<td>@product.Code</td>
					<td>@product.Price</td>
					<td>@product.CreatedDate</td>
					<td>@product.UpdatedDate</td>
					<td>@product.DeletedDate</td>
					<td>@product.IsDeleted</td>
					<td>@product.ImageUrl</td>
					<td><a class="btn btn-outline-primary" asp-action="UpdateForm" asp-area="" asp-route-id="@product" asp-controller="Home">Güncelle</a></td>
					

				</tr>
			}
		</tbody>
	</table>
	<br />
</div>

