@using ProductApp.Services.Products

@model CreateProductRequest
@{
    ViewData["Title"] = "Yeni Ürün Ekle";
}
<div class="container">

    <form method="post">
        <label>Ürün Adı</label>
        <textarea asp-for="ProductName" class="form-control" rows="5"></textarea>
        <br />
        <label>Kod</label>
        <input type="text" asp-for="Code" class="form-control" />
        <br />
        <label>Birim</label>
        <input type="text" asp-for="Price" class="form-control" />
        <br />
        <label>Image Path</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <br />
        <button class="btn btn-outline-primary">Kaydet</button>
    </form>

</div>